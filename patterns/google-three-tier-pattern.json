{
    "$schema": "https://calm.finos.org/release/1.1/meta/calm.json",
    "$id": "https://patterns.google.com/three-tier-architecture.pattern.json",
    "title": "Google Three-Tier Architecture Pattern",
    "description": "A reusable architecture pattern for a simple three-tier application on Google Cloud Platform with presentation, application, and data tiers",
    "type": "object",
    "properties": {
        "nodes": {
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": {
                "type": "object"
            },
            "prefixItems": [
                {
                    "$ref": "https://calm.finos.org/release/1.1/meta/core.json#/defs/node",
                    "type": "object",
                    "properties": {
                        "unique-id": { "const": "frontend" },
                        "name": { "const": "Web Frontend" },
                        "node-type": { "const": "webclient" },
                        "description": { "type": "string" },
                        "interfaces": {
                            "type": "array",
                            "minItems": 1,
                            "maxItems": 1,
                            "items": { "type": "object" },
                            "prefixItems": [
                                {
                                    "$ref": "https://calm.finos.org/release/1.1/meta/interface.json#/defs/interface-type",
                                    "type": "object",
                                    "properties": {
                                        "unique-id": { "const": "frontend-url" },
                                        "type": { "const": "url" }
                                    }
                                }
                            ]
                        }
                    },
                    "required": ["description"]
                },
                {
                    "$ref": "https://calm.finos.org/release/1.1/meta/core.json#/defs/node",
                    "type": "object",
                    "properties": {
                        "unique-id": { "const": "app-service" },
                        "name": { "const": "Application Service" },
                        "node-type": { "const": "service" },
                        "description": { "type": "string" },
                        "interfaces": {
                            "type": "array",
                            "minItems": 2,
                            "maxItems": 2,
                            "items": { "type": "object" },
                            "prefixItems": [
                                {
                                    "$ref": "https://calm.finos.org/release/1.1/meta/interface.json#/defs/interface-type",
                                    "type": "object",
                                    "properties": {
                                        "unique-id": { "const": "app-container" },
                                        "type": { "const": "container-image" }
                                    }
                                },
                                {
                                    "$ref": "https://calm.finos.org/release/1.1/meta/interface.json#/defs/interface-type",
                                    "type": "object",
                                    "properties": {
                                        "unique-id": { "const": "app-port" },
                                        "type": { "const": "port" }
                                    }
                                }
                            ]
                        }
                    },
                    "required": ["description"]
                },
                {
                    "$ref": "https://calm.finos.org/release/1.1/meta/core.json#/defs/node",
                    "type": "object",
                    "properties": {
                        "unique-id": { "const": "database" },
                        "name": { "type": "string" },
                        "node-type": { "const": "database" },
                        "description": { "type": "string" }
                    },
                    "required": ["description", "name"]
                }
            ]
        },
        "relationships": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": { "type": "object" },
            "prefixItems": [
                {
                    "$ref": "https://calm.finos.org/release/1.1/meta/core.json#/defs/relationship",
                    "type": "object",
                    "properties": {
                        "unique-id": { "const": "frontend-to-app" },
                        "description": { "type": "string" },
                        "protocol": { "const": "HTTPS" },
                        "relationship-type": {
                            "const": {
                                "connects": {
                                    "source": { "node": "frontend" },
                                    "destination": { "node": "app-service" }
                                }
                            }
                        }
                    },
                    "required": ["description"]
                },
                {
                    "$ref": "https://calm.finos.org/release/1.1/meta/core.json#/defs/relationship",
                    "type": "object",
                    "properties": {
                        "unique-id": { "const": "app-to-database" },
                        "description": { "type": "string" },
                        "relationship-type": {
                            "const": {
                                "connects": {
                                    "source": { "node": "app-service" },
                                    "destination": { "node": "database" }
                                }
                            }
                        }
                    },
                    "required": ["description"]
                }
            ]
        },
        "metadata": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "items": { "type": "object" },
            "prefixItems": [
                {
                    "type": "object",
                    "properties": {
                        "gcp": {
                            "type": "object",
                            "properties": {
                                "project-id": { "type": "string" },
                                "region": { "type": "string" },
                                "environment": { 
                                    "type": "string"
                                }
                            },
                            "required": ["project-id", "region", "environment"]
                        }
                    },
                    "required": ["gcp"]
                }
            ]
        }
    },
    "required": ["nodes", "relationships", "metadata"]
}
