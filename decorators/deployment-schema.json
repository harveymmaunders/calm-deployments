{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Deployment Decorator",
  "description": "Deployment-specific decorator extending the CALM Decorators Schema",
  "allOf": [
    {
      "$ref": "file://<full-path>/decorators/decorator-schema.json"
    },
    {
      "properties": {
        "decorators": {
          "items": {
            "properties": {
              "type": {
                "const": "deployment"
              },
              "data": {
                "type": "object",
                "properties": {
                  "deployment-start-time": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Deployment start time in ISO 8601 format"
                  },
                  "deployment-status": {
                    "type": "string",
                    "enum": [
                      "in-progress",
                      "failed",
                      "completed",
                      "rolled-back",
                      "cancelled"
                    ],
                    "description": "Current status of the deployment"
                  },
                  "deployment-observability": {
                    "type": "string",
                    "format": "uri",
                    "description": "Link to deployment logs, metrics, or observability dashboards"
                  }
                },
                "required": [
                  "deployment-start-time",
                  "deployment-status",
                  "deployment-observability"
                ]
              }
            }
          }
        }
      }
    }
  ]
}
